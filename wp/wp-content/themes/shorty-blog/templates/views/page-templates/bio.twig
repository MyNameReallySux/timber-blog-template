{% extends "layouts/base.twig" %}

{% block content %}
	<div class="container">
		<article class="{{post.post_type}}" id="Page{{post.styleID}}">
			<h1>{{post.title}}</h1>
			<hr class="break" />
			<div class="user-card">
				<div class="user-avatar">
					<img src="{{ user.avatar.abs_url }}"/>
				</div>
				<div class="user-info">
					<div class="user-name">{{ user.first_name }} {{ user.last_name }}</div>
					<div class="user-email">{{ user.email }}</div>
				</div>

				<div class="user-bio">
					{{ user.description }}
				</div>
			</div>
			<div class="content">
				{{post.content}}
			</div>
			</section>
		</article>
	</div>
{% endblock %}